#ifndef DISPATCHER_H
#define DISPATCHER_H

class Dispatcher
{

public:
	Dispatcher();
	Dispatcher(const Dispatcher& other);
	virtual ~Dispatcher();
	virtual Dispatcher& operator=(const Dispatcher& other);
	virtual bool operator==(const Dispatcher& other) const;

	cppcms::json::value grid(std::string entity);
	cppcms::json::value grid_data(std::string entity, int page, int perpage, std::string sortby);
	cppcms::json::value form(std::string entity);  

};

#endif // DISPATCHER_H
